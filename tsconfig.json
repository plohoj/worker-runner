{
    "compilerOptions": {
        "baseUrl": "./",
        "module": "ESNext",
        "lib": [
            "webworker"
        ],
        "target": "ES2015",
        "outDir": "./dist",
        "strictNullChecks": true,
        "strict": true,
        "moduleResolution": "Node",
        "sourceMap": true,
        "paths": {
            "@worker-runner/*": ["./modules/*"]
        }
    },
    "exclude": [
        "node_modules",
        "dist/",
        "coverage/",
        ".history/"
    ],
    "include": ["./*", "./.*.*", "./test/**/*", "./modules/**/*"]
}