{
    "compilerOptions": {
        "baseUrl": "./",
        "module": "ESNext",
        "target": "ES2015",
        "outDir": "./dist",
        "strict": true,
        "moduleResolution": "Node",
        "sourceMap": true,
        "importHelpers": true,
        "noImplicitOverride": true,
        "paths": {
            "@worker-runner/*": ["./packages/*"]
        }
    },
    "exclude": [
        "node_modules",
        "dist/",
        "coverage/",
        ".history/"
    ],
    "include": ["./*", "./.*.*", "./test/**/*", "packages/**/*", "tools/**/*"]
}
