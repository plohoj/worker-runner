{
    "compilerOptions": {
        "baseUrl": "./",
        "module": "commonjs",
        "lib": [
            "webworker"
        ],
        "target": "ES2020",
        "outDir": "./dist",
        "strictNullChecks": true,
        "strict": true,
        "moduleResolution": "Node",
        "paths": {
            "@core": ["./modules/core"],
            "@modules/*": ["./modules/*"]
        }
    },
    "exclude": [
        "node_modules"
    ]
}